<h1>Sign in</h1>
<p id="notice"><%= notice %></p>

<%= form_tag sessions_path do%>
<p>
<%= label_tag :username%>
<%=text_field_tag  :username%>
</p>
<p>
<%= label_tag :password%>
<%= password_field_tag :password%>
</p>
<p>
<%= label_tag :is_admin%>
<%= check_box_tag :is_admin%>

</p>
<p class="button"><%=submit_tag "Log in"%> </p>

<% end %>
