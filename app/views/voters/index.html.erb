<h1>Listing voters</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Username</th>
      
      <th>Phone</th>
      <th>Approved</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  

    <% @voters.each do |voter| %>
    
     <tr> 

       <td><%= voter.email %></td>
        <td><%= voter.username %></td>        
        <td><%= voter.phone %></td>
        <td><%= voter.approved %></td>
        <td><%= link_to 'Show', voter %></td>
        <td><%= link_to 'Edit', edit_voter_path(voter) %></td>
        <td><%= link_to 'Destroy', voter, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <%if !voter.approved %>
       <td><%= link_to 'approve', voter_approve_path(voter), method: :post, data: { confirm: 'Are you sure?'} %></td><% end %>
      </tr>
    
    
    <%end%>  
  </tbody>
</table>

